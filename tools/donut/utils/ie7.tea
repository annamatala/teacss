.ie7_inline_block() {
    *display: inline; /* IE7 inline-block hack */
    *zoom: 1;
}

.ie7_restore_left_whitespace() {
    *margin-left: .3em;

    &:first-child {
        *margin-left: 0;
    }
}

.ie7_restore_right_whitespace() {
    *margin-right: .3em;

    &:last-child {
        *margin-left: 0;
    }
}

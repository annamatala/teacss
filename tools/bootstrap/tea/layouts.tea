//
// Layouts
// Fixed-width and fluid (with sidebar) layouts
// --------------------------------------------


// Container (centered, fixed-width layouts)
.container {
  .container_fixed();
}

// Fluid layouts (left aligned, with sidebar, min- & max-width content)
.container_fluid {
  padding-left: @{gridGutterWidth}%;
  padding-right: @{gridGutterWidth}%;
  .clearfix();
}